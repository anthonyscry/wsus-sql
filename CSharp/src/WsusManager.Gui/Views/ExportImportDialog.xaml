<Window x:Class="WsusManager.Gui.Views.ExportImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer WSUS Data"
        Height="280" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#21262D"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="SubtleBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#58A6FF"/>

        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Transfer WSUS Data"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Direction Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Transfer Direction:"
                       Foreground="{StaticResource SubtleBrush}"
                       Margin="0,0,0,8"/>

            <RadioButton x:Name="RadioExport"
                         Content="Export (Online server to media)"
                         Foreground="{StaticResource TextBrush}"
                         IsChecked="True"
                         Margin="0,0,0,4"/>

            <RadioButton x:Name="RadioImport"
                         Content="Import (Media to air-gapped server)"
                         Foreground="{StaticResource TextBrush}"/>
        </StackPanel>

        <!-- Path Selection -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Folder path:"
                       Foreground="{StaticResource SubtleBrush}"
                       Margin="0,0,0,6"/>

            <DockPanel>
                <Button x:Name="BtnBrowse"
                        Content="Browse"
                        DockPanel.Dock="Right"
                        Background="{StaticResource SurfaceBrush}"
                        Foreground="{StaticResource TextBrush}"
                        BorderThickness="0"
                        Padding="10,4"
                        Margin="8,0,0,0"
                        Cursor="Hand"
                        Click="BtnBrowse_Click"/>

                <TextBox x:Name="TxtPath"
                         Background="{StaticResource SurfaceBrush}"
                         Foreground="{StaticResource TextBrush}"
                         BorderThickness="0"
                         Padding="6,4"/>
            </DockPanel>
        </StackPanel>

        <!-- Spacer -->
        <Grid Grid.Row="3"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Start Transfer"
                    Style="{StaticResource DialogButton}"
                    Background="{StaticResource AccentBrush}"
                    Margin="0,0,8,0"
                    Click="BtnOk_Click"/>

            <Button Content="Cancel"
                    Style="{StaticResource DialogButton}"
                    Background="{StaticResource SurfaceBrush}"
                    Foreground="{StaticResource TextBrush}"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
