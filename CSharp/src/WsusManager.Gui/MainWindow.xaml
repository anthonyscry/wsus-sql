<Window x:Class="WsusManager.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WsusManager.Gui.ViewModels"
        mc:Ignorable="d"
        Title="WSUS Manager v4.0"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- GA-AppLocker Dark Theme -->
        <SolidColorBrush x:Key="BgMain" Color="#0D1117"/>
        <SolidColorBrush x:Key="BgSidebar" Color="#161B22"/>
        <SolidColorBrush x:Key="BgCard" Color="#21262D"/>
        <SolidColorBrush x:Key="Border1" Color="#30363D"/>
        <SolidColorBrush x:Key="Text1" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="Text2" Color="#8B949E"/>
        <SolidColorBrush x:Key="Text3" Color="#6E7681"/>
        <SolidColorBrush x:Key="Blue" Color="#58A6FF"/>
        <SolidColorBrush x:Key="Green" Color="#3FB950"/>
        <SolidColorBrush x:Key="Red" Color="#F85149"/>
        <SolidColorBrush x:Key="Orange" Color="#D29922"/>

        <!-- Button Styles -->
        <Style x:Key="NavBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Text2}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                Margin="4,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BgCard}"/>
                    <Setter Property="Foreground" Value="{StaticResource Text1}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6CB6FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{StaticResource BgSidebar}">
            <DockPanel>
                <!-- Logo & Version -->
                <StackPanel DockPanel.Dock="Top" Margin="16,20">
                    <TextBlock Text="WSUS Manager"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource Text1}"/>
                    <TextBlock Text="v4.0 C# Edition"
                               FontSize="10"
                               Foreground="{StaticResource Text3}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Bottom Buttons -->
                <StackPanel DockPanel.Dock="Bottom" Margin="8,0,8,16">
                    <Button Content="? Help" Style="{StaticResource NavBtn}" Command="{Binding ShowHelpCommand}"/>
                    <Button Content="âš™ Settings" Style="{StaticResource NavBtn}" Command="{Binding ShowSettingsCommand}"/>
                    <Button Content="â„¹ About" Style="{StaticResource NavBtn}" Command="{Binding ShowAboutCommand}"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,12,0,0">
                    <StackPanel>
                        <Button Content="â—‰ Dashboard"
                                Style="{StaticResource NavBtn}"
                                Command="{Binding ShowDashboardCommand}"/>

                        <TextBlock Text="SETUP"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Blue}"
                                   Margin="16,16,0,6"/>
                        <Button Content="â–¶ Install WSUS" Style="{StaticResource NavBtn}" Command="{Binding InstallWsusCommand}"/>
                        <Button Content="â†» Restore DB" Style="{StaticResource NavBtn}" Command="{Binding RestoreDbCommand}"/>

                        <TextBlock Text="TRANSFER"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Blue}"
                                   Margin="16,16,0,6"/>
                        <Button Content="â‡„ Export/Import" Style="{StaticResource NavBtn}" Command="{Binding ExportImportCommand}"/>

                        <TextBlock Text="MAINTENANCE"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Blue}"
                                   Margin="16,16,0,6"/>
                        <Button Content="ðŸ“… Monthly" Style="{StaticResource NavBtn}" Command="{Binding MonthlyMaintenanceCommand}"/>
                        <Button Content="ðŸ§¹ Cleanup" Style="{StaticResource NavBtn}" Command="{Binding DeepCleanupCommand}"/>

                        <TextBlock Text="DIAGNOSTICS"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Blue}"
                                   Margin="16,16,0,6"/>
                        <Button Content="ðŸ” Health Check" Style="{StaticResource NavBtn}" Command="{Binding RunHealthCheckCommand}"/>
                        <Button Content="ðŸ”§ Repair" Style="{StaticResource NavBtn}" Command="{Binding RepairHealthCommand}"/>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>      <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Log Panel -->
                <RowDefinition Height="Auto"/>  <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="20,16,20,12">
                <Border DockPanel.Dock="Right"
                        Background="{StaticResource BgCard}"
                        CornerRadius="4"
                        Padding="8,4">
                    <TextBlock Text="Administrator"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Green}"/>
                </Border>
                <TextBlock Text="{Binding CurrentPage}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource Text1}"
                           VerticalAlignment="Center"/>
            </DockPanel>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsDashboardVisible, Converter={StaticResource BoolToVis}}"
                          Margin="20,0">
                <StackPanel>
                    <!-- Status Cards -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Card 1: Services -->
                        <Border Grid.Column="0" Background="{StaticResource BgCard}" CornerRadius="6" Margin="0,0,8,0">
                            <Grid>
                                <Border Height="3" VerticalAlignment="Top" CornerRadius="6,6,0,0" Background="{StaticResource Blue}"/>
                                <StackPanel Margin="14,16,14,14">
                                    <TextBlock Text="Services" FontSize="11" Foreground="{StaticResource Text2}"/>
                                    <TextBlock Text="{Binding ServicesStatus}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Margin="0,6,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource Text1}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AllServicesRunning}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource Green}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AllServicesRunning}" Value="False">
                                                        <Setter Property="Foreground" Value="{StaticResource Red}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="SQL, WSUS, IIS" FontSize="10" Foreground="{StaticResource Text3}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 2: Database -->
                        <Border Grid.Column="1" Background="{StaticResource BgCard}" CornerRadius="6" Margin="4,0,4,0">
                            <Grid>
                                <Border Height="3" VerticalAlignment="Top" CornerRadius="6,6,0,0" Background="{StaticResource Green}"/>
                                <StackPanel Margin="14,16,14,14">
                                    <TextBlock Text="Database" FontSize="11" Foreground="{StaticResource Text2}"/>
                                    <TextBlock Text="{Binding DatabaseSize}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource Text1}"
                                               Margin="0,6,0,0"/>
                                    <TextBlock Text="SUSDB Size" FontSize="10" Foreground="{StaticResource Text3}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 3: Server Mode -->
                        <Border Grid.Column="2" Background="{StaticResource BgCard}" CornerRadius="6" Margin="4,0,4,0">
                            <Grid>
                                <Border Height="3" VerticalAlignment="Top" CornerRadius="6,6,0,0" Background="{StaticResource Orange}"/>
                                <StackPanel Margin="14,16,14,14">
                                    <TextBlock Text="Server Mode" FontSize="11" Foreground="{StaticResource Text2}"/>
                                    <TextBlock Text="{Binding ServerMode}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource Text1}"
                                               Margin="0,6,0,0"/>
                                    <TextBlock Text="Online/Air-Gap" FontSize="10" Foreground="{StaticResource Text3}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 4: Health -->
                        <Border Grid.Column="3" Background="{StaticResource BgCard}" CornerRadius="6" Margin="8,0,0,0">
                            <Grid>
                                <Border Height="3" VerticalAlignment="Top" CornerRadius="6,6,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource Green}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding OverallHealth}" Value="Degraded">
                                                    <Setter Property="Background" Value="{StaticResource Orange}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding OverallHealth}" Value="Unhealthy">
                                                    <Setter Property="Background" Value="{StaticResource Red}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                                <StackPanel Margin="14,16,14,14">
                                    <TextBlock Text="Health" FontSize="11" Foreground="{StaticResource Text2}"/>
                                    <TextBlock Text="{Binding OverallHealth}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource Text1}"
                                               Margin="0,6,0,0"/>
                                    <TextBlock Text="System Status" FontSize="10" Foreground="{StaticResource Text3}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Quick Actions -->
                    <Border Background="{StaticResource BgCard}" CornerRadius="6" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Quick Actions"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource Text1}"
                                       Margin="0,0,0,12"/>
                            <WrapPanel>
                                <Button Content="â–¶ Start Services"
                                        Style="{StaticResource ActionBtn}"
                                        Command="{Binding StartServicesCommand}"/>
                                <Button Content="ðŸ” Health Check"
                                        Style="{StaticResource ActionBtn}"
                                        Command="{Binding RunHealthCheckCommand}"/>
                                <Button Content="ðŸ§¹ Cleanup"
                                        Style="{StaticResource ActionBtn}"
                                        Command="{Binding DeepCleanupCommand}"/>
                                <Button Content="ðŸ“… Maintenance"
                                        Style="{StaticResource ActionBtn}"
                                        Command="{Binding MonthlyMaintenanceCommand}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Log Panel (Collapsible) -->
            <Border Grid.Row="2"
                    Background="{StaticResource BgCard}"
                    BorderBrush="{StaticResource Border1}"
                    BorderThickness="0,1,0,0"
                    Margin="20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="{Binding LogPanelHeight}"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Border Grid.Row="0" Background="{StaticResource BgSidebar}" Padding="12,8">
                        <DockPanel>
                            <Button DockPanel.Dock="Right"
                                    Content="{Binding LogPanelButtonText}"
                                    Padding="12,4"
                                    Background="{StaticResource BgCard}"
                                    Foreground="{StaticResource Text2}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding ToggleLogPanelCommand}"/>
                            <Button DockPanel.Dock="Right"
                                    Content="Clear"
                                    Padding="12,4"
                                    Margin="0,0,6,0"
                                    Background="{StaticResource BgCard}"
                                    Foreground="{StaticResource Text2}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding ClearLogCommand}"/>
                            <TextBlock Text="Operation Log"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Text1}"
                                       VerticalAlignment="Center"/>
                        </DockPanel>
                    </Border>

                    <!-- Log Content -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding IsLogPanelExpanded, Converter={StaticResource BoolToVis}}">
                        <TextBox Text="{Binding LogOutput, Mode=OneWay}"
                                 Background="{StaticResource BgMain}"
                                 Foreground="#C9D1D9"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Padding="12"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="3" Background="{StaticResource BgSidebar}" Padding="20,10">
                <Grid>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{StaticResource Text2}"
                               FontSize="12"
                               VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="â— Operation running..."
                                   Foreground="{StaticResource Orange}"
                                   FontSize="12"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <Button Content="Cancel"
                                Padding="12,4"
                                Background="{StaticResource Red}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding CancelOperationCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
