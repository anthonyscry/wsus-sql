<Window x:Class="WsusManager.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WsusManager.Gui.ViewModels"
        mc:Ignorable="d"
        Title="WSUS Manager v4.0 (C# POC)"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#252526"/>
        <SolidColorBrush x:Key="CardBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3E3E42"/>
        <SolidColorBrush x:Key="TextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0E639C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4EC9B0"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F48771"/>

        <!-- Button Style -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Status Indicator Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Dashboard -->
            <RowDefinition Height="Auto"/> <!-- Actions -->
            <RowDefinition Height="*"/>    <!-- Log Output -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="WSUS Manager"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="C# Proof of Concept - Hybrid Port"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Refresh Dashboard"
                        Style="{StaticResource DarkButton}"
                        Command="{Binding RefreshDashboardCommand}"/>
            </Grid>
        </Border>

        <!-- Dashboard Cards -->
        <Grid Grid.Row="1" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SQL Server Card -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="SQL Server Express"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="{Binding SqlServerStatus.Status}"
                               FontSize="16"
                               Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SqlServerStatus.IsRunning}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SqlServerStatus.IsRunning}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- WSUS Service Card -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="WSUS Service"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="{Binding WsusServiceStatus.Status}"
                               FontSize="16"
                               Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WsusServiceStatus.IsRunning}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding WsusServiceStatus.IsRunning}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- IIS Card -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="IIS (W3SVC)"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="{Binding IisStatus.Status}"
                               FontSize="16"
                               Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IisStatus.IsRunning}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IisStatus.IsRunning}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Database Card -->
            <Border Grid.Column="3" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Database Size"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="{Binding DatabaseSize}"
                               FontSize="16"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="20,15" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Run Health Check"
                        Style="{StaticResource DarkButton}"
                        Command="{Binding RunHealthCheckCommand}"
                        Width="180"/>
                <Button Content="Repair Health"
                        Style="{StaticResource DarkButton}"
                        Command="{Binding RepairHealthCommand}"
                        Width="180"/>
                <Button Content="Export/Import"
                        Style="{StaticResource DarkButton}"
                        Command="{Binding ExportImportCommand}"
                        Width="180"/>
            </StackPanel>
        </Border>

        <!-- Log Output -->
        <Border Grid.Row="3" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Operation Log"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding LogOutput, Mode=OneWay}"
                             Background="{StaticResource BackgroundBrush}"
                             Foreground="#D4D4D4"
                             BorderThickness="0"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource SurfaceBrush}" Padding="15,10">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Operation running..."
                               Foreground="#FFA500"
                               FontSize="12"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                 Width="100"
                                 Height="4"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
