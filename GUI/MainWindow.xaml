<Window x:Class="WsusManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WsusManager.Views"
        xmlns:vm="clr-namespace:WsusManager.ViewModels"
        mc:Ignorable="d"
        Title="WSUS Manager"
        Width="1200" Height="800"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="WSUS Manager"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Windows Server Update Services"
                               FontSize="12"
                               Foreground="#CCFFFFFF"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="White"
                            Margin="0,0,8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1"
                    Style="{StaticResource ModernTabControlStyle}"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Margin="0">

            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard" Style="{StaticResource ModernTabItemStyle}">
                <views:DashboardView DataContext="{Binding DashboardViewModel}"/>
            </TabItem>

            <!-- Database Tab -->
            <TabItem Header="Database" Style="{StaticResource ModernTabItemStyle}">
                <views:DatabaseView DataContext="{Binding DatabaseViewModel}"/>
            </TabItem>

            <!-- Services Tab -->
            <TabItem Header="Services" Style="{StaticResource ModernTabItemStyle}">
                <views:ServicesView DataContext="{Binding ServicesViewModel}"/>
            </TabItem>

            <!-- Health Tab -->
            <TabItem Header="Health" Style="{StaticResource ModernTabItemStyle}">
                <views:HealthView DataContext="{Binding HealthViewModel}"/>
            </TabItem>

            <!-- Maintenance Tab -->
            <TabItem Header="Maintenance" Style="{StaticResource ModernTabItemStyle}">
                <views:MaintenanceView DataContext="{Binding MaintenanceViewModel}"/>
            </TabItem>

            <!-- Media Transfer Tab -->
            <TabItem Header="Media Transfer" Style="{StaticResource ModernTabItemStyle}">
                <views:MediaTransferView DataContext="{Binding MediaTransferViewModel}"/>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings" Style="{StaticResource ModernTabItemStyle}">
                <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Style="{StaticResource CaptionTextStyle}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ProgressBar Width="100"
                                 Height="6"
                                 IsIndeterminate="{Binding IsOperationRunning}"
                                 Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Style="{StaticResource ModernProgressBarStyle}"
                                 Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding CurrentTime, StringFormat='{}{0:HH:mm:ss}'}"
                               Style="{StaticResource CaptionTextStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
