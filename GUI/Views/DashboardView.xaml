<UserControl x:Class="WsusManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Dashboard" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="{Binding LastUpdated, StringFormat='Last updated: {0}'}"
                               Style="{StaticResource CaptionTextStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="Auto-refresh"
                              IsChecked="{Binding AutoRefreshEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Summary Cards Row -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Services Status Card -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Services" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SomeServicesStopped}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Style="{StaticResource BodyTextStyle}">
                                <Run Text="{Binding RunningServicesCount, Mode=OneWay}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding TotalServicesCount, Mode=OneWay}"/>
                                <Run Text=" Running"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Start All"
                                    Command="{Binding StartAllServicesCommand}"
                                    Style="{StaticResource SuccessButtonStyle}"
                                    MinWidth="80"
                                    Margin="0,0,8,0"/>
                            <Button Content="Stop All"
                                    Command="{Binding StopAllServicesCommand}"
                                    Style="{StaticResource DangerButtonStyle}"
                                    MinWidth="80"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Database Size Card -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Database" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding DatabaseStats.SizeDisplay}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Style="{StaticResource CaptionTextStyle}" Margin="0,4,0,0">
                            <Run Text="{Binding DatabaseStats.UpdateCount, Mode=OneWay}"/>
                            <Run Text=" updates"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Disk Space Card -->
                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Disk Space" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding DiskSpace.FreeDisplay}"
                                   FontSize="24"
                                   FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DiskSpace.IsWarning}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DiskSpace.IsLow}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <ProgressBar Value="{Binding DiskSpace.PercentUsed}"
                                     Maximum="100"
                                     Height="8"
                                     Margin="0,8,0,0"
                                     Style="{StaticResource ModernProgressBarStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card -->
                <Border Grid.Column="6" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,8"/>
                        <Button Content="Health Check"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8"/>
                        <Button Content="Deep Cleanup"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Services List -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Service Status" Style="{StaticResource SubheaderTextStyle}"/>

                    <ItemsControl ItemsSource="{Binding Services}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="8,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       Style="{StaticResource BodyTextStyle}"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Name}"
                                                       Style="{StaticResource CaptionTextStyle}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Status}"
                                                   Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Recent Operations -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                <StackPanel>
                    <TextBlock Text="Recent Operations" Style="{StaticResource SubheaderTextStyle}"/>

                    <ListBox ItemsSource="{Binding RecentOperations}"
                             Style="{StaticResource ModernListBoxStyle}"
                             MaxHeight="200"
                             Margin="0,8,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding TimestampDisplay}"
                                               Style="{StaticResource CaptionTextStyle}"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Operation}"
                                               Style="{StaticResource BodyTextStyle}"/>

                                    <Ellipse Grid.Column="2" Width="8" Height="8">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Success}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="4"
                    Background="#80FFFFFF"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                 Width="200"
                                 Height="8"
                                 Style="{StaticResource ModernProgressBarStyle}"/>
                    <TextBlock Text="Loading..."
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
